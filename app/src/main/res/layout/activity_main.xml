<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="@drawable/topbox"
        android:orientation="vertical"
        android:layout_marginBottom="30px"
        android:paddingTop="20px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="75px">
            <EditText
                android:id="@+id/pokeSearch"
                android:layout_width="800px"
                android:layout_height="50sp"
                android:hint="POKEDEX"
                android:textSize="20sp"
                android:paddingLeft="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
            <Button
                android:id="@+id/searchBtn"
                android:layout_width="270px"
                android:layout_height="50sp"
                android:text="Search"
                android:backgroundTint="@color/white"
                android:textColor="#f05454"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/pokeImage"
            android:layout_width="600px"
            android:layout_height="500px"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pokeName"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:textStyle="bold"

            android:text=""
            android:textSize="30sp"
            android:textColor="#f05454"
            android:layout_marginBottom="5px"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pokeIndex"
                android:layout_width="430px"
                android:layout_height="wrap_content"
                android:text="#"/>

            <TextView
                android:id="@+id/pokeType"
                android:layout_width="430px"
                android:layout_gravity="right"
                android:layout_height="40sp"
                android:background="@drawable/typecontainer"
                android:text=""
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="BASIC STATS"
            android:gravity="center"
            android:textColor="#f05454"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">
            <TextView

                android:layout_width="450px"
                android:layout_height="wrap_content"
                android:text="Health:"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pokeHealth"
                android:layout_width="430px"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="20px"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/values"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">
            <TextView
                android:layout_width="450px"
                android:layout_height="wrap_content"
                android:text="Attack:"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pokeAttack"
                android:layout_width="430px"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="20px"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/values"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">
            <TextView
                android:layout_width="450px"
                android:layout_height="wrap_content"
                android:text="Defense:"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pokeDefense"
                android:layout_width="430px"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="20px"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/values"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">
            <TextView
                android:layout_width="450px"
                android:layout_height="wrap_content"
                android:text="SP Attack:"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pokeSA"
                android:layout_width="430px"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="20px"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/values"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">
            <TextView
                android:layout_width="450px"
                android:layout_height="wrap_content"
                android:text="SP Defense:"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pokeSD"
                android:layout_width="430px"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="20px"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/values"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px">
            <TextView
                android:layout_width="450px"
                android:layout_height="wrap_content"
                android:text="Speed:"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pokeSpeed"
                android:layout_width="430px"
                android:layout_height="wrap_content"
                android:text="80"
                android:paddingLeft="20px"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/values"/>
        </LinearLayout>
        <Button
            android:id="@+id/clearBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Clear"
            android:backgroundTint="#f05454"/>

    </LinearLayout>


</LinearLayout>